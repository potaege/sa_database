generator client {
  provider = "prisma-client-js"
}

datasource easy_service {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id                    Int                     @id @default(autoincrement())
  username              String
  password              String
  salt                  String
  name                  String
  surname               String
  address               String
  province              String
  role                  String
  addDate               DateTime                @default(now())
  works                 Works[]
  movedItems            Transaction_logs[]      @relation("UserLog")
  receivedItems         Transaction_logs[]      @relation("FromUserLog")
  Spare_parts_engineers Spare_parts_engineers[]
}

model Spare_parts {
  id                    Int                    @id @default(autoincrement())
  name                  String                 @unique()
  description           String
  price                 Float
  addDate               DateTime               @default(now())
  Spare_parts_requests  Spare_parts_requests[]
  Transaction_logs      Transaction_logs?
  Spare_parts_engineers Spare_parts_engineers?
}

model Customers {
  id           Int      @id @default(autoincrement())
  name         String
  credit_limit Float
  address      String
  tax_id       String?
  tel          String
  province     String
  addDate      DateTime @default(now())
  Works        Works[]
}

model Works {
  id              String            @id @default(uuid())
  mail_date       DateTime
  service_Date    DateTime?
  status          Int               @default(0)
  userID          Int?              @unique
  customerID      Int               @unique
  address         String
  province        String
  addDate         DateTime          @default(now())
  user_id         Users?            @relation(fields: [userID], references: [id])
  customer_id     Customers         @relation(fields: [customerID], references: [id])
  Requests        Requests[]
  AdditionalCosts AdditionalCosts[]
}

model AdditionalCosts {
  id          Int      @id @default(autoincrement())
  description String
  cost        Float
  workID      String   @unique
  work_id     Works    @relation(fields: [workID], references: [id])
  addDate     DateTime @default(now())
}

model Requests {
  id                   Int                    @id @default(autoincrement())
  model                String
  sn                   String
  rated                String
  warranty             Boolean
  workID               String
  addDate              DateTime               @default(now())
  Spare_parts_requests Spare_parts_requests[]
  work_id              Works                  @relation(fields: [workID], references: [id])

  @@index([workID])
}

model Spare_parts_requests {
  id              Int         @id @default(autoincrement())
  spare_parts_qty Int
  sparePartID     Int         @unique
  description     String
  sn              String?
  requestID       Int         @unique
  addDate         DateTime    @default(now())
  spare_parts_id  Spare_parts @relation(fields: [sparePartID], references: [id])
  request_id      Requests    @relation(fields: [requestID], references: [id])
}

model Transaction_logs {
  id            Int         @id @default(autoincrement())
  quantity      Int
  status        Int         @default(0)
  sparePartID   Int         @unique
  userID        Int         @unique
  fromUserID    Int         @unique
  addDate       DateTime    @default(now())
  spare_part_id Spare_parts @relation(fields: [sparePartID], references: [id])
  user_id       Users       @relation("UserLog", fields: [userID], references: [id])
  rom_user_idf  Users       @relation("FromUserLog", fields: [fromUserID], references: [id])
}

model Spare_parts_engineers {
  id            Int      @id @default(autoincrement())
  spare_part_id Int      @unique
  engineer_id   Int      @unique
  quantity      Int
  addDate       DateTime @default(now())

  engineer   Users       @relation(fields: [engineer_id], references: [id])
  spare_part Spare_parts @relation(fields: [spare_part_id], references: [id])
}
