generator client {
  provider = "prisma-client-js"
}

datasource easy_service {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id                    String                  @id @default(uuid())
  username              String
  password              String
  name                  String
  surname               String
  address               String
  province              String
  role                  String
  addDate               DateTime                @default(now())
  works                 Works[]
  movedItems            Transaction_log[]       @relation("UserLog")
  receivedItems         Transaction_log[]       @relation("FromUserLog")
  Spare_parts_engineers Spare_parts_engineers[]
}

model Spare_parts {
  id                    Int                    @id @default(autoincrement())
  name                  String                 @unique()
  description           String
  price                 Float
  addDate               DateTime               @default(now())
  Spare_parts_requests  Spare_parts_requests[]
  Transaction_log       Transaction_log?
  Spare_parts_engineers Spare_parts_engineers?
}

model Customers {
  id           Int        @id @default(autoincrement())
  name         String
  credit_limit Float
  address      String
  tax_id       String?
  tel          String
  province     String
  add_date     DateTime   @default(now())
  Works        Works[]
  Invoices     Invoices[]
}

model Works {
  id           String       @id @default(cuid())
  mail_date    DateTime
  service_Date DateTime?
  status       Int
  userID       String       @unique
  customerID   Int          @unique
  address      String
  province     String
  addDate      DateTime     @default(now())
  user_id      Users?       @relation(fields: [userID], references: [id])
  customer_id  Customers    @relation(fields: [customerID], references: [id])
  quotations   Quotations[]
  invoices     Invoices[]
  po           PO[]
  Requests     Requests[]
}

model AdditionalCost {
  id           Int        @id @default(autoincrement())
  description  String
  cost         Float
  quotationID  String     @unique
  quotation_id Quotations @relation(fields: [quotationID], references: [id])
}

model Quotations {
  id              String           @id @default(cuid())
  date            DateTime
  contact_person  String
  delivery_to     String
  delivery_on     DateTime?
  payment_term    String
  workID          String           @unique
  addDate         DateTime         @default(now())
  work_id         Works            @relation(fields: [workID], references: [id])
  AdditionNalCost AdditionalCost[]
}

// เพิ่ม Column ของ Service charge , Travel fee ? 

model Invoices {
  id                 String    @id @default(cuid())
  date               DateTime
  due_date           DateTime
  customerID         Int
  workID             String    @unique()
  addedDate          DateTime  @default(now())
  status             Int // ใช้บอกว่าจ่ายตังหรือบัง
  outstandingBalance Float
  customer_id        Customers @relation(fields: [customerID], references: [id])
  work_id            Works     @relation(fields: [workID], references: [id])

  @@index([customerID])
}

model PO {
  id        String   @id @default(cuid())
  date      DateTime
  workID    String   @unique
  addedDate DateTime @default(now())
  work_id   Works    @relation(fields: [workID], references: [id])
}

model Requests {
  id                   Int                    @id @default(autoincrement())
  model                String
  sn                   String
  type                 String
  rated                String
  warranty             Boolean
  workID               String
  addedDate            DateTime               @default(now())
  Spare_parts_requests Spare_parts_requests[]
  work_id              Works                  @relation(fields: [workID], references: [id])

  @@index([workID])
}

model Spare_parts_requests {
  id              Int         @id @default(autoincrement())
  spare_parts_qty Int
  sparePartID     Int         @unique
  description     String
  sn              String?
  requestID       Int         @unique
  addedDate       DateTime    @default(now())
  spare_parts_id  Spare_parts @relation(fields: [sparePartID], references: [id])
  request_id      Requests    @relation(fields: [requestID], references: [id])
}

model Transaction_log {
  id            Int         @id @default(autoincrement())
  quantity      Int
  status        Int
  sparePartID   Int         @unique
  userID        String      @unique
  fromUserID    String      @unique
  addedDate     DateTime    @default(now())
  spare_part_id Spare_parts @relation(fields: [sparePartID], references: [id])
  user_id       Users       @relation("UserLog", fields: [userID], references: [id])
  rom_user_idf  Users       @relation("FromUserLog", fields: [fromUserID], references: [id])
}

model Spare_parts_engineers {
  id            Int    @id @default(autoincrement())
  spare_part_id Int    @unique
  engineer_id   String @unique
  quantity      Int

  engineer   Users       @relation(fields: [engineer_id], references: [id])
  spare_part Spare_parts @relation(fields: [spare_part_id], references: [id])
}
